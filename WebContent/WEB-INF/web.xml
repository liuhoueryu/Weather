<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" id="WebApp_ID" version="2.5">
  <display-name>TestJSP</display-name>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
    <welcome-file>index.htm</welcome-file>
    <welcome-file>index.jsp</welcome-file>
    <welcome-file>default.html</welcome-file>
    <welcome-file>default.htm</welcome-file>
    <welcome-file>default.jsp</welcome-file>
  </welcome-file-list>
  <servlet>
    <servlet-name>TestServlet</servlet-name>
    <servlet-class>com.neuedu.servlet.TestServlet</servlet-class>
    <load-on-startup>1</load-on-startup>
  </servlet>
  <servlet-mapping>
    <servlet-name>TestServlet</servlet-name>
    <url-pattern>/TestServlet</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>UserLoginServlet</servlet-name>
    <servlet-class>com.neuedu.servlet.UserLoginServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>UserLoginServlet</servlet-name>
    <url-pattern>/UserLoginServlet</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>UserLogoutServlet</servlet-name>
    <servlet-class>com.neuedu.servlet.UserLogoutServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>UserLogoutServlet</servlet-name>
    <url-pattern>/UserLogoutServlet</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>UserRegisterServlet</servlet-name>
    <servlet-class>com.neuedu.servlet.UserRegisterServlet</servlet-class>
    <init-param>
    	<param-name>registerScore</param-name>
		<param-value>20</param-value>
    </init-param>
  </servlet>
  <servlet-mapping>
    <servlet-name>UserRegisterServlet</servlet-name>
    <url-pattern>/UserRegisterServlet</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>UserQueryServlet</servlet-name>
    <servlet-class>com.neuedu.servlet.UserQueryServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>UserQueryServlet</servlet-name>
    <url-pattern>/UserQueryServlet</url-pattern>
  </servlet-mapping>
  
  <context-param>
  	<param-name>charSet</param-name>
  	<param-value>utf-8</param-value>
  </context-param>
  
</web-app>